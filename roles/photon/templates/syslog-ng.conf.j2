@version: 3.6
@include "scl.conf"

source s_local {
	# use this once syslog-ng is new enough to parse systemd journal directly
	# system();

	# until then, set ForwardToSyslog=yes in /etc/systemd/journald.conf
	unix-dgram("/run/systemd/journal/syslog");
	internal();
};

source s_network {
	udp();
};

{% if syslog_config.local_file %}
destination d_local {
	file("{{ syslog_config.local_file }}");
};
{% endif %}

{% if syslog_config.server and syslog_config.port %}
destination remote_server { udp("{{ syslog_config.server }}" port({{ syslog_config.port }})); };
destination logstash { syslog("{{ syslog_config.server }}" transport("tcp") port({{ syslog_config.port }}) ); };
{% endif %}

log {
	source(s_local);

	# uncomment this line to open port 514 to receive messages
	#source(s_network);
{% if syslog_config.local_file %}
	destination(d_local);
{% endif %}

{% if syslog_config.server and syslog_config.port %}
	destination(logstash);
{% endif %}
};
